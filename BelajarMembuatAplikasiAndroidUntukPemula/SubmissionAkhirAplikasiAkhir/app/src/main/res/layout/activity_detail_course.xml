<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".DetailCourseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_detail_course"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearance="@style/RoundedSquare"
                app:srcCompat="@drawable/ic_launcher_background"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tv_title_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/title_course"
                android:textSize="20sp"
                android:textStyle="bold"
                android:lines="2"
                app:layout_constraintEnd_toEndOf="@id/img_detail_course"
                app:layout_constraintStart_toStartOf="@id/img_detail_course"
                app:layout_constraintTop_toBottomOf="@id/img_detail_course" />

            <LinearLayout
                android:id="@+id/other_info_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/tv_title_course"
                app:layout_constraintStart_toStartOf="@id/tv_title_course"
                app:layout_constraintTop_toBottomOf="@id/tv_title_course">

                <TextView
                    android:id="@+id/tv_star_course"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="start|center_vertical"
                    android:lines="1"
                    android:text="@string/stars_course"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/star_24px" />

                <TextView
                    android:id="@+id/tv_time_course"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:gravity="start|center_vertical"
                    android:lines="1"
                    android:text="@string/time_learn_course"
                    android:textSize="16sp"
                    app:drawableStartCompat="@drawable/schedule_24px" />

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/container_tags_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="@id/other_info_course"
                app:layout_constraintStart_toStartOf="@id/other_info_course"
                app:layout_constraintTop_toBottomOf="@id/other_info_course">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/tags_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:orientation="horizontal"
                    app:singleLine="true">

                </com.google.android.material.chip.ChipGroup>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_header_description_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/description_course"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="@id/container_tags_course"
                app:layout_constraintStart_toStartOf="@id/container_tags_course"
                app:layout_constraintTop_toBottomOf="@id/container_tags_course" />

            <TextView
                android:id="@+id/tv_description_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="@string/description_course"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_header_description_course"
                app:layout_constraintStart_toStartOf="@+id/tv_header_description_course"
                app:layout_constraintTop_toBottomOf="@+id/tv_header_description_course" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>